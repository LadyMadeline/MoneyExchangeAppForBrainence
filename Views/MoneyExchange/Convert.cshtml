@{
    ViewData["Title"] = "Home Page";
}

<p>
    <h1>Converter</h1>
</p>

<div class="container">
    <div class="row">
        <form asp-action="Convert" class="d-flex justify-content-between" enctype="multipart/form-data">
            <div class="col-sm d-flex justify-content-between">
                <label for="amount" class="control-label">Amount</label>
                <input type="number" min="0" name="amount" value="@ViewData["fromAmount"]" class="form-control mx-3" required />
                <select name="fromCurrency" class="form-control" required>
                    <option>USD</option>
                    <option>EUR</option>
                    <option>CHF</option>
                    <option>GBP</option>
                </select>
            </div>
            <div class="col-sm d-flex justify-content-between">
                <label for="toAmount" class="control-label">Converted to</label>
                <input type="number" name="toAmount" value="@ViewData["toAmount"]" class="form-control mx-3" readonly />
                <select name="toCurrency" class="form-control" required>
                    <option>USD</option>
                    <option>EUR</option>
                    <option>CHF</option>
                    <option>GBP</option>
                </select>
            </div>
            <div class="col-sm">
                <input class="btn btn-primary" type="submit" value="Convert" />
            </div>
        </form>
    </div>
</div>

